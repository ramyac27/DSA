prime number - if the number is divisible only by 1 & itself

class Solution {
    static boolean isPrime(int n) {
        int flag=0;
        for(int i=2;i<n;i++){
            if(n%i==0){
                flag=1;
            }
        }
        if(flag==1){
            return false;
        }
        else{
            return true;
        }
    }
}
