public class main{
	
	public static boolean sort_array(int arr[], int i) {
		   if(i>=arr.length-1) {
			   return true;
		   }
		   else {
			   if(arr[i]>arr[i+1]) {
				   return false;
			   }
			   return sort_array(arr,i+1);
			   
		   }
	}
	public static void main(String[] args) {
		int[] a = {1,2,3,4,7,6};
		System.out.print(sort_array(a,0));
	}
}
